<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              style="@style/Theme.AppCompat.Light.NoActionBar"
              android:layout_width="300dp"
              android:layout_height="match_parent"
              android:background="@color/color_darkgray"
              android:orientation="vertical"
              app:theme="@style/Theme.AppCompat.Light.NoActionBar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/office_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:text="Офис"/>

        <CheckBox
            android:id="@+id/office_checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:text="Коллегия (бюро) "/>

        <CheckBox
            android:id="@+id/office_checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:text="Выезд"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/but_office_yes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@color/color_button_orange"
            android:text="ПРИНЯТЬ"
            android:textColor="@color/color_white"/>

        <Button
            android:id="@+id/but_office_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@color/color_button_gray"
            android:elevation="1dp"
            android:text="отмена"
            android:textColor="@color/color_white"/>

    </LinearLayout>

</LinearLayout>
