<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/color_gray_fon"
    android:orientation="vertical"
    app:theme="@style/Theme.AppCompat.Light.NoActionBar">


    <ScrollView
        android:id="@+id/scrollView11"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Отправить жалобу на адвоката"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Адвокат"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/jaloba_et_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Причина жалобы"
                    android:textColor="@color/colorPrimaryDark" />

                <CheckBox
                    android:id="@+id/jaloba_but_checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="неправильный ответ" />

                <CheckBox
                    android:id="@+id/jaloba_but_checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="хамство" />

                <CheckBox
                    android:id="@+id/jaloba_but_checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="игнорирование вопроса" />

                <CheckBox
                    android:id="@+id/jaloba_but_checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="другое" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Опишите свою жалобу"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/jaloba_et_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/jaloba_but_yes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:background="@color/color_button_orange"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="отправить через сервис"
                    android:textColor="@color/black_m"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/jaloba_but_yes2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="0.3"
                    android:background="@color/color_button_orange"
                    android:onClick="onClick"
                    android:text="отправить через email"
                    android:textColor="@color/black_m"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/jaloba_but_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:allowUndo="true"
                    android:background="@color/color_button_gray"
                    android:text="отмена"
                    android:textColor="@color/black_m"
                    android:textSize="10sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
