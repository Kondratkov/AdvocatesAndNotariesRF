<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/advocates_filter_lila_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/color_menubar_l"
        android:orientation="vertical"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|right">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/xbut_menu_12"/>

                <ImageButton
                    android:id="@+id/advocates_filter_but_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="#00ffffff"
                    android:onClick="onClick"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/advocates_filter_lila_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/advocates_filter_but_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00d7c0c0"
                    android:onClick="onClick"
                    android:singleLine="true"
                    android:text="@string/project_ago"
                    android:textColor="#ffffff"/>

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff"/>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/advocates_filter_but_vse"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/color_button_orange"
            android:onClick="onClick"
            android:text="Показать всех" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/advocates_filter_but_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/color_button_gray"
                android:clickable="false"
                android:onClick="onClick"
                android:text="Применить поиск"
                android:textColor="@color/color_white"/>

            <TextView
                android:id="@+id/advocates_filter_tv_dbt_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onClick" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="53dp">

        <ScrollView
            android:id="@+id/main_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="53dp"
            android:layout_marginTop="53dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/frameLayout_advocateFilter_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/ain_ic_my_loc"
                                android:elevation="0dp"/>

                            <TextView
                                android:id="@+id/advocates_filter_tv_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="@string/advocate_filter_1"
                                android:textColor="@color/color_bluedark_for_bar"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/advocates_filter_but_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/but_red_rect"
                            android:onClick="onClick"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameLayout_advocateFilter_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/ain_ic_add_city"/>

                            <TextView
                                android:id="@+id/advocates_filter_tv_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="@string/advocate_filter_2"
                                android:textColor="@color/color_bluedark_for_bar"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/advocates_filter_but_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/but_red_rect"
                            android:onClick="onClick"
                            android:padding="5dp"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/frameLayout_advocateFilter_3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/ain_ic_add_special"/>

                            <TextView
                                android:id="@+id/advocates_filter_tv_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|center_vertical"
                                android:layout_margin="5dp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="@string/advocate_filter_3"
                                android:textColor="@color/color_bluedark_for_bar"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/advocates_filter_but_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/but_red_rect"
                            android:onClick="onClick"
                            android:padding="5dp"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameLayout_advocateFilter_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/ain_ic_bup"/>

                            <TextView
                                android:id="@+id/advocates_filter_tv_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center_vertical"
                                android:layout_margin="5dp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="@string/advocate_filter_4"
                                android:textColor="@color/color_bluedark_for_bar"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/advocates_filter_but_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/but_red_rect"
                            android:onClick="onClick"
                            android:padding="5dp"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/frameLayout_advocateFilter_5"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView20"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/ain_ic_sud_terr"/>

                            <TextView
                                android:id="@+id/advocates_filter_tv_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="@string/advocate_filter_5"
                                android:textColor="@color/color_bluedark_for_bar"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/advocates_filter_but_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/but_red_rect"
                            android:onClick="onClick"
                            android:padding="5dp"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameLayout_advocateFilter_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView21"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.4"
                                android:background="@drawable/ain_ic_jurist_next"/>

                            <TextView
                                android:id="@+id/advocates_filter_tv_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="@string/advocate_filter_6"
                                android:textColor="@color/color_bluedark_for_bar"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/advocates_filter_but_6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/but_red_rect"
                            android:onClick="onClick"
                            android:padding="5dp"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/advocates_filter_tv_otchet_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</FrameLayout>


